<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/light_grey_text_colot</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:backgroundTint">#0B0E1E</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="score_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15sp</item>
        <item name="android:textColor">#2EC305</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>